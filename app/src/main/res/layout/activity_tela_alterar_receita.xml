<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- BOTÃO VOLTAR -->
        <ImageView
            android:id="@+id/btn_voltar"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/txtDetalhesDespesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalhes da Receita"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn_voltar"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- LABEL VALOR -->
        <TextView
            android:id="@+id/txtValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor"
            android:textSize="14sp"
            android:textColor="#777777"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/txtDetalhesDespesa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- VALOR -->
        <EditText
            android:id="@+id/txtValorDespesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="R$ 0,00"
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="@null"
            android:layout_marginTop="8dp"
            android:textColor="#00C853"
            android:textColorHint="#00C853"
            app:layout_constraintTop_toBottomOf="@id/txtValor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- LINHA -->
        <View
            android:id="@+id/separator_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="32dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@id/txtValorDespesa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- NOME -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutNome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxStrokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/separator_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAlterarNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome"
                android:padding="16dp"
                android:background="@android:color/transparent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- CATEGORIA -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutCategoria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="24dp"
            app:startIconDrawable="@drawable/ic_category"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxStrokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/layoutNome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <AutoCompleteTextView
                android:id="@+id/edtAlterarCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Categoria"
                android:focusable="false"
                android:clickable="true"
                android:padding="16dp"
                android:background="@android:color/transparent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- DATA -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="24dp"
            app:startIconDrawable="@drawable/ic_calendar"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxStrokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/layoutCategoria"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAlterarData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data"
                android:focusable="false"
                android:clickable="true"
                android:padding="16dp"
                android:background="@android:color/transparent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- DESCRIÇÃO -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutDescricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="24dp"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxStrokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/layoutData"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAlterarDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descrição"
                android:padding="16dp"
                android:background="@android:color/transparent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- BOTÕES -->
        <Button
            android:id="@+id/btnAlterarDespesa"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Editar Receita"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="@color/black"
            app:cornerRadius="28dp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/layoutDescricao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btnApagarDespesa"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Excluir Receita"
            android:textColor="#FF3333"
            android:textStyle="bold"
            android:backgroundTint="#FFF0F0"
            app:cornerRadius="28dp"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/btnAlterarDespesa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
